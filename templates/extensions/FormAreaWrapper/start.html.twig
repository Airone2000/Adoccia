<div
        class="formArea widget-{{ area.widget.type }}"
        style="
                width: calc({{ area.width }}% - {{ area.marginLeft }}px - {{ area.marginRight }}px);
                background-color: {{ area.backgroundColor }};
                margin-left: {{ area.marginLeft }}px;
                margin-right: {{ area.marginRight }}px;
                margin-top: {{ area.marginTop }}px;
                margin-bottom: {{ area.marginBottom }}px;
                padding-left: {{ area.paddingLeft }}px;
                padding-right: {{ area.paddingRight }}px;
                padding-top: {{ area.paddingTop }}px;
                padding-bottom: {{ area.paddingBottom }}px;
                border-style: solid;
                border-left-width: {{ area.borderLeftWidth }}px;
                border-left-color: {{ area.borderLeftColor }};
                border-right-width: {{ area.borderRightWidth }}px;
                border-right-color: {{ area.borderRightColor }};
                border-top-width: {{ area.borderTopWidth }}px;
                border-top-color: {{ area.borderTopColor }};
                border-bottom-width: {{ area.borderBottomWidth }}px;
                border-bottom-color: {{ area.borderBottomColor }};
                align-items: {{ area.widgetVerticalAlignment }};
        "
>