{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fiche') }}
    {{ encore_entry_link_tags('mapsBuilder') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mapsBuilder') }}
    {{ encore_entry_script_tags('advancedPicture') }}
{% endblock %}

{% block body %}
    <h1>Modifier la fiche "{{ fiche.title }}"</h1>
    {% if fiche.picture %}
        <img src="{{ absolute_url(asset(picturesDir ~ 'crpd_' ~fiche.picture.filename)) | imagine_filter('fiche_picture_thumbnail')  }}" alt="{{ fiche.picture.filename }}" width="100" height="100">
    {% endif %}
    <hr>

    {% for label, messages in app.flashes(['editFicheError']) %}
        {% for message in messages %}
            <p>{{ label }}</p>
        {% endfor %}
    {% endfor %}

    <div style="width:600px;">
        {% include 'fiche/_fiche.html.twig' with {'form': form, 'fiche': fiche} %}
    </div>
{% endblock %}

