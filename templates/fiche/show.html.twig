{% extends 'category/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fiche') }}
    {{ load_Leaflet_style() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ load_Leaflet_script() }}
    {{ encore_entry_script_tags('mapsBuilder') }}
{% endblock %}

{% block category_body %}
    <h1>{{ fiche.title }}</h1>

    {% if is_granted('CAN_EDIT_FICHE', fiche) %}
        <a href="{{ url('fiche.edit', {'id': fiche.id}) }}">Edit</a>
    {% endif %}

    <div id="fiche" style="width:600px;">
    {{ ficheView|raw }}
    </div>

{% endblock %}