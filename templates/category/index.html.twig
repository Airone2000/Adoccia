{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('categoryIndex') }}
{% endblock %}

{% block body %}
    <div id="categoriesIndex">

        <div id="categoriesIndex_TitleAndButtonNew">
            <h1 id="categoriesIndex_Title" class="no-padding no-margin">Les collections</h1>
            <a id="categoriesIndex_ButtonNew" class="btn" href="{{ url('category.new') }}">+ créer</a>
        </div>

        <div id="categoriesIndex_Search">
            {{ form_start(searchForm) }}
            {{ form_widget(searchForm.title) }}
            {% include '/category/_search.modal.html.twig' with {'form': searchForm} %}
            {{ form_end(searchForm) }}
            <a id="categoriesIndex_Search_BtnMore" class="btn openModal" data-target-selector="#categoriesSearchModal" href="#">
                <i class="fas fa-sliders-h"></i>
            </a>
        </div>

        {% if categories is not empty %}
            <div id="CategoriesList" class="{{ paginator.lastPage == 1 ? 'single-page' : '' }}">
                {% for category in categories %}
                    {% set target = url('category.show', {'id': category.id}) %}
                    <div class="CategoriesList_Item link" data-target="{{ target }}">
                        {{ showPicture(category.picture) }}
                        <div class="CategoriesList_Item_Info">
                            <h2 class="CategoriesList_Item_Name">{{ category.name }}</h2>
                            <div class="CategoriesList_Item_Author">{{ category.createdBy.username }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div>
                Aucun résultat
            </div>
        {% endif %}

        {% if categories is not empty %}
            <div id="categoriesIndex_Footer">
                {{ include('_paginator.html.twig') }}
            </div>
        {% endif %}

    </div>

{% endblock %}

