{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fiche') }}
    {{ encore_entry_link_tags('add_fiche') }}
    {{ encore_entry_link_tags('mapsBuilder') }}
    {{ load_Leaflet_style() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ load_Leaflet_script() }}
    {{ encore_entry_script_tags('mapsBuilder') }}
    {{ encore_entry_script_tags('ficheForm') }}
    {{ encore_entry_script_tags('pictureUploader') }}
{% endblock %}

{% block body %}
    <h1>Add fiche to {{ category.name }}</h1>

    {% for label, messages in app.flashes(['addFicheError']) %}
        {% for message in messages %}
            <p>{{ label }}</p>
        {% endfor %}
    {% endfor %}

    <div class="formWrapper">
        {% include 'fiche/_fiche.html.twig' with {'form': form, 'fiche': fiche} %}
    </div>

{% endblock %}


