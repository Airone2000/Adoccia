{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <a href="{{ url('category.listFiches', {'id': category.id}) }}">
        Liste des fiches
    </a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ category.online ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Public</th>
                <td>{{ category.public ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category.index') }}">back to list</a>

    {% if is_granted('EDIT_CATEGORY', category) %}
        <a href="{{ path('category.edit', {'id': category.id}) }}">edit</a>
    {% endif %}

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
