{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('categoryShow') }}
{% endblock %}

{% block body %}

    <div class="ShowCategory">
        <div>
            <div>
                <div class="ShowCategory_GlobalIntro">
                    <div style="width: 300px;">
                    {{ showPicture(category.picture) }}
                    </div>
                    <h1 class="ShowCategory_GlobalIntro_Title">{{ category.name }}</h1>
                    {% if category.description %}
                        <p>
                            {{ category.description }}
                        </p>
                    {% endif %}
                </div>
            </div>
            <div>
                Droite
            </div>
        </div>
    </div>



    <a href="{{ url('category.listFiches', {'id': category.id}) }}">
        Liste des fiches
    </a>


    <a href="{{ path('category.index') }}">back to list</a>

    {% if is_granted('EDIT_CATEGORY', category) %}
        <a href="{{ path('category.edit', {'id': category.id}) }}">edit</a>
    {% endif %}

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
