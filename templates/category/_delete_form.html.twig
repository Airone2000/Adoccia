{% if is_granted('DELETE_CATEGORY', category) %}
    <form method="post" action="{{ path('category.delete', {'id': category.id}) }}" onsubmit="return confirm({{ 'category.delete.confirmation'|trans }});">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn">{{ 'category.delete.btn'|trans }}</button>
    </form>
{% endif %}
