{% extends 'base.html.twig' %}

{% block title %}{{ 'user.register.page_name'|trans }}{% endblock %}

{% block body %}
    <h2>{{ 'user.register.title'|trans }}</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn">{{ 'user.register.btn'|trans }}</button>
    {{ form_end(registrationForm) }}

    <hr>
    <p>
        <a href="{{ url('app.login') }}">{{ 'user.register.already.registered.link'|trans }}</a>
    </p>
{% endblock %}
